  }

  .post-tags {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tag {
    padding: 0.25rem 0.5rem;
    background: #f1f5f9;
    color: #475569;

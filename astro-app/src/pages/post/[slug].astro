  }

  .post-series__description {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .post-series__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  .post-series__link:hover {
    color: #2563eb;
  }

  .post-series__arrow {
    width: 1rem;
    height: 1rem;
  }

  /* ‚úÖ Social Share */
  .post-share {
    border-top: 1px solid #e2e8f0;
    padding-top: 2rem;
    margin-bottom: 2rem;
  }

  .post-share__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .post-share__buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .post-share__button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;

      order: -1;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-excerpt {
      font-size: 1.125rem;
    }

    .post-info__main {
      flex-direction: column;
      gap: 1rem;
    }

    .post-cover__image {
      height: 250px;
    }


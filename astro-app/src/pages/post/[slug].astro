  @media (max-width: 480px) {
    .post-article {
      padding: 0 0.5rem;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-categories {
      justify-content: center;
    }

    .post-share__buttons {
      flex-direction: column;
    }

    .post-share__button {
      justify-content: center;
    }
  }
</style>
